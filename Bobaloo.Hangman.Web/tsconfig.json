{
  "compilerOptions": {
    "target": "ES5",
    "outDir": "./wwwroot/js",
    "rootDir": "./wwwroot",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": [ "ES5", "DOM" ],
    "moduleResolution": "Node"
  },
  "include": [ "wwwroot/scripts/**/*.ts" ],
  "exclude": [ "node_modules" ]
}