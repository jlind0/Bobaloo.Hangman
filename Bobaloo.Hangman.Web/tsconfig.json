{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "./wwwroot/",
    "rootDir": "./wwwroot",
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": [ "ES6", "DOM" ],
    "moduleResolution": "Node"
  },
  "include": [ "wwwroot/scripts/**/*.ts" ],
  "exclude": [ "node_modules" ]
}